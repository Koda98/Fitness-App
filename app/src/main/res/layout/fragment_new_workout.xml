<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_workout"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Workout Type"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/strength_training_button"
        android:id="@+id/st_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cardio_button"
        android:id="@+id/cardio_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/sport_button"
        android:id="@+id/sport_button"
        android:layout_gravity="center_horizontal" />
</LinearLayout>